{
  "name": "itty-time",
  "version": "0.1.0",
  "description": "An itty library to handle common time-related things for your API.",
  "sourceType": "module",
  "main": "./itty-time.js",
  "module": "./itty-time.mjs",
  "types": "./itty-time.d.ts",
  "exports": {
    ".": {
      "require": "./itty-time.js",
      "import": "./itty-time.mjs",
      "types": "./itty-time.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "vitest --coverage --reporter verbose",
    "test:once": "vitest run",
    "verify": "echo 'verifying module...' && run-s test:once build",
    "dev": "run-p dev:lint test",
    "dev:lint": "onchange -ik 'src/**/*.ts' -- yarn lint",
    "coverage": "vitest run --coverage",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "format": "prettier src --write src",
    "prerelease": "yarn verify",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "tsup src/itty-time.ts --format cjs,esm --minify --dts --clean",
    "prepublishOnly": "yarn build",
    "release": "release --tag --push --src=dist --patch"
  },
  "keywords": [
    "fetch",
    "api",
    "helper",
    "tiny",
    "json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwhitley/itty-time.git"
  },
  "author": "Kevin R. Whitley <krwhitley@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwhitley/itty-time/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitest/coverage-c8": "0.23.4",
    "coveralls": "^3.1.1",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3",
    "uglify-js": "^3.17.0",
    "vitest": "0.23.4",
    "yarn": "^1.22.19",
    "yarn-release": "^1.10.3"
  }
}
